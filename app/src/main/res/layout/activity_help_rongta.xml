<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.AyudaActivity">
    <RelativeLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_button_normal">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="423dp"


        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_toolbar"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:text="Ayuda impresora Rongta"
            android:textColor="@color/colorTigo"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:text="Si no tiene la aplicacion instalada para el modelo rongta por favor descargue la aplicaciÃ³n y configure depende el modelo de su impresora tocando la imagen."
            android:textColor="@color/negro"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnImghelp"
            android:layout_width="167dp"
            android:layout_height="132dp"
            card_view:srcCompat="@drawable/rongta" />


    </LinearLayout>

</RelativeLayout>
